#include <iostream>
using namespace std;
int main() 
{
    setlocale(0, "");

    int height_1, len;

    cout << "Введите высоту крыши: ";
    cin >> height_1;
    len = height_1+3;
    len = len+height_1-4;

    
    cout << "дом:" << endl;

    for (int i = 0; i < height_1; ++i) 
    {
        for (int j = 0; j < height_1 - i - 1; ++j) 
        {
            cout << " ";
        }
        for (int j = 0; j < 2 * i + 1; ++j) 
        {
            cout << "*";
        } 
        cout << endl;
    }

    for(int i=0; i<len; i++)
    {
    cout<<"*";
    }
    cout<<endl;
 
for (int i = 0; i < len-1; i++) 
    {
        cout <<"*";

        for (int j = 1; j < len-1; j++) 
        {
            cout << " ";
        }

        cout << "*";
        cout << endl;
    }

    for(int i=0; i<len; i++)
    {
        cout<<"*";
    }

    return 0;
}
