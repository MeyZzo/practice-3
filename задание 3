#include <iostream>
using namespace std;

int main() {
	setlocale(0, "");
	int a = 0;
	int b = 1;
	bool str = 1;

	for (int i = 8; i > 0; i--) // треугольник
	{
		cout << "\t";
			for (int j = 0; j < i; j++)
			{
				cout << " ";
			}
			for (int i = 0; i <= a * 2; i++) 
			{
				cout << "^"; // вывод символа
			}
		cout << endl;
		a++;
	}
	
	for (int i = 0; i < 10; ++i) // квадрат
	{
		cout << "\t";
		cout << "|";
		for (int j = i; j < 15; j++)
		{
			if (i == 0 || i == 9)
			{
				cout << "-";
			}
			else
			{
				cout << " ";
			}
		}
		cout << "|" << endl;
	}

	return 0;

}
